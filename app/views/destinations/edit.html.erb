  <h1>Update Destination</h1>


  <%= form_tag "/destinations/#{@destination.id}", method: :patch do %>
  <div>
    Name: <input type="text" name="name" value="<%= @destination.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @destination.description %>">
  </div>
  <div>
   Region:
   <select name="region_id">
    <option  disabled selected>Select option</option>
    <% @regions.each do |region| %>
    <option value="<%=region.id %>"><%=region.name %> </option>
    <% end %>
  </select>
</div>
  <div>
   Category:
   <select name="category_id">
    <option disabled selected>select option</option>
    <% @categories.each do |category| %>
    <option value="<%=category.id %>"><%=category.title%> </option>
    <% end %>
  </select>
  
</div>
<input type="submit" value="Update Destination">
<% end %>
