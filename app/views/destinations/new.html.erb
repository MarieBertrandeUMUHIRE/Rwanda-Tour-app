<div class="container">
  <h1>New Destination</h1>
  <ul>
    <% if @destination.errors.any? %>
    <% @destination.errors.full_messages.each do |message| %>
    <li class="model-errors"><%= message %></li> 
    <% end %>
    <% end %>
  </ul>


  <%= form_tag "/destinations", method: :post do %>
  <div>
    Name: <input type="text" name="name">
  </div>
  <div>
    Description: <input type="text" name="description">
  </div>
  <div>
   Region:
   <select name="region_id">
    <option value="" disabled selected>Select your option</option>
    <% @regions.each do |region| %>
    <option value="<%=region.id %>"><%=region.name %> </option>
    <% end %>
  </select>
  
</div>
<div>
 Category:
 <select name="category_id">
  <option value="" disabled selected>Select your option</option>
  <% @categories.each do |category| %>
  <option value="<%=category.id %>"><%=category.title%> </option>
  <% end %>
</select>

</div>
<div> <br>
 <strong>Upload Image:</strong> <br><input type="file" name="image" accept="image/*;capture=camera">
</div> <br>
<input type="submit" value="Create destination">
<% end %>
</div>
