  <!DOCTYPE html>
  <html>
  <head>
    <title>RwandaTourApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cookie" rel="stylesheet">

   <!--  the following code stops the general nav-bar from appearing on the home page -->
   
    <% unless controller.controller_name == "pages" && controller.action_name == "index"%>
    <nav id="mainNav" class="navbar navbar-inverse navbar-custom navbar" style="height:50px">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">UMUHIRE LTD</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Hotel Location <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                  <li><a href="/destinations?hotel=Kigali City">Kigali</a></li>
                    <li><a href="destinations?hotel=Northern Province">Northern Province</a></li>
                    <li><a href="/destinations?hotel=Eastern Province">Eastern Province<span class="sr-only">(current)</span></a></li>
                    <li><a href="/destinations?hotel=Western Province">Western Province<span class="sr-only">(current)</span></a></li>
                    <li><a href="/destinations?hotel=Southern Province">South Province<span class="sr-only">(current)</span></a></li>
                  </ul>
                </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Destinations <span class="caret"></span></a>
          <ul class="dropdown-menu">
          <li><a href="/destinations?filter=parks">Visit Parks </a></li>
            <li><a href="destinations?filter=lakes">Visit Lakes</a></li>
            <li><a href="/destinations?filter=museums">Visit Museums<span class="sr-only">(current)</span></a></li>
             <li><a href="/destinations?filter=hotels">Visit Hotels<span class="sr-only">(current)</span></a></li>
            <li><a href="/destinations?filter=supermarkets">View Supermarkets<span class="sr-only">(current)</span></a></li>
            <li><a href="/destinations?filter=other">Other<span class="sr-only">(current)</span></a></li>
          </ul>
        </li>
        <%= form_tag "/destinations/search", class: "navbar-form navbar-left", method: :post do %>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search" name="search_input">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <% end %>

      </ul>


      <ul class="nav navbar-nav navbar-right">

        <% if current_user %>
        <li><a href="/users/<%=current_user.id%>/edit"><span class="glyphicon glyphicon-log-out"></span><%=current_user.first_name%></a></li>
       
        <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        <% else %>
        <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

        <% end %>
      </ul>
    </div>
  </nav>
  <% end %>
</head>

<body class="body">
  <div class="flash-message">
    <% flash.each do |name, message| %>
    <div class="alert alert-<%= name %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%=message%></strong>
      <% end %>
      <hr>
    </div>

    <%= yield %>
    <!-- Footer -->
    <footer class="footer">
      <div class="row">
        <div class="col-lg-12 text-center">
          <p>Copyright &copy; 2017, UMUHIRE LTD - Kigali</p>
        </div>
      </footer>
    </div>
  </body>
  </html>
